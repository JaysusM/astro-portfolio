---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<div class="card-item box">
  <div class="card-item-text">
    <h1>{title}</h1>
    <p>{description}</p>
  </div>
  <img src={image} />
</div>
<style>
  .card-item {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border-radius: var(--border-radius);
    overflow: hidden;
  }
  .card-item .card-item-text {
    padding: 1rem;
  }
  .card-item img {
    border-top: 4px solid var(--border);
    max-height: 100%;
    max-width: 100%;
    min-height: 100%;
    min-width: 100%;
    object-fit: cover;
  }
  h1 {
    font-size: 1.5rem;
    margin: 0;
  }
</style>
