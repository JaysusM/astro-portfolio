---
import "@fontsource/reem-kufi";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <img class="toys-bg toys-left" src="/toys.svg" />
    <img class="toys-bg toys-right" src="/toys-2.svg" />
  </body>
</html>
<style is:global>
  :root {
    --main: #f9c44a;
    --text: black;
    --border: black;
    --accent: white;
    --topbar-height: 100px;
    --topbar-padding: 1rem;
    --border-radius: 20px;
    --section-height: calc(
      100vh - var(--topbar-height) - calc(var(--topbar-padding) * 2)
    );
  }
  .box {
    border: 4px solid var(--border);
    box-shadow: var(--border) 5px 5px 0px;
    background-color: var(--accent);
    border-radius: var(--border-radius);
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  h1 {
    font-size: 3rem;
    margin: 0;
  }
  h3 {
    font-size: 1.25rem;
    margin: 0;
  }
  body {
    background-color: var(--main);
    color: var(--text);
    font-family: "reem kufi", sans-serif;
    margin-top: calc(var(--topbar-height) + calc(var(--topbar-padding) * 2));
    min-height: calc(
      100vh - var(--topbar-height) - calc(var(--topbar-padding) * 2)
    );
    min-width: 100vw;
    margin-bottom: 5vh;
  }
  a:link,
  a:visited {
    color: var(--text);
    text-decoration: none;
  }
  body {
    max-width: 2000px;
  }
  a.underline-zigzag {
    --underline-size: 0.15em;
    line-height: 1.1em;
    padding-bottom: calc(2.1 * var(--underline-size));
    background:
      conic-gradient(from 135deg at top, var(--text) 90deg, #0000 0) left 0
        bottom var(--underline-size) / calc(2 * var(--underline-size))
        var(--underline-size) repeat-x,
      conic-gradient(from -45deg at bottom, var(--text) 90deg, #0000 0) bottom 0
        left var(--underline-size) / calc(2 * var(--underline-size))
        var(--underline-size) repeat-x;
    --mask: linear-gradient(#000 0 0) content-box,
      linear-gradient(#000 0 0) 50% / var(--position, 0%) padding-box no-repeat;
    -webkit-mask: var(--mask);
    mask: var(--mask);
    transition: 0.5s;
  }
  a.underline-zigzag:hover {
    --position: 100%;
  }
  .toys-bg {
    position: fixed;
    bottom: 0;
    width: min(30vw, 600px);
    z-index: -1;
  }
  .toys-left {
    left: 0;
  }
  .toys-right {
    right: 0;
  }

  /* from medium screens section height is half of the screen */
  @media (min-width: 2000px) {
    :root {
      --section-height: calc(
        70vh - var(--topbar-height) - calc(var(--topbar-padding) * 2)
      );
    }
  }
</style>
