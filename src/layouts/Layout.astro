---
import "@fontsource/poppins";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --main: linear-gradient(
      -225deg,
      rgb(255, 226, 159) 0%,
      rgb(255, 169, 159) 48%,
      rgb(255, 113, 154) 100%
    );
    --text: black;
    --border: black;
    --accent: #ecc053;
    --button-color: rgba(255, 255, 255, 0.4);
    --border-radius: 16px;
    --topbar-height: 50px;
    --topbar-padding: 2rem;
    --max-width: 1500px;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: "Poppins", sans-serif;
    min-height: 100vh;
    background-image: var(--main);
    background-size: cover;
    background-repeat: no-repeat;
    color: var(--text);
    max-width: min(var(--max-width), 90vw);
    margin: 0 auto;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
  }

  h4 {
    font-size: 1.2rem;
    font-weight: 500;
  }

  p {
    font-size: 1rem;
  }

  .border-shadow {
    border-radius: var(--border-radius);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .only-small-screen,
  .only-medium-screen {
    display: none;
  }

  .only-large-screen {
    display: block;
  }

  @media (558px <= width <= 768px) {
    h1 {
      font-size: 1.4rem;
    }
    h2 {
      font-size: 1.2rem;
    }
    h4 {
      font-size: 1rem;
    }
    p {
      font-size: 0.8rem;
    }
    body {
      max-width: 100vw;
    }
    .information-wrapper {
      grid-template-columns: 1fr;
    }

    .only-small-screen,
    .only-large-screen {
      display: none;
    }

    .only-medium-screen {
      display: block !important;
    }
  }

  @media (width <= 558px) {
    .only-medium-screen,
    .only-large-screen {
      display: none;
    }
    .only-small-screen {
      display: block !important;
    }

    body {
      max-width: 100vw;
    }
  }
</style>
